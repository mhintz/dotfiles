{
  "suggest.autoTrigger": "trigger",
  "suggest.timeout": 5000,
  "diagnostic.refreshAfterSave": true,
  "signature.triggerSignatureWait": 80,
  "codeLens.enable": false,
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.hoverTarget": "echo",
  "tsserver.enableJavascript": false,
  "tsserver.npm": "~/.nodenv/shims/npm",
  "tsserver.formatOnType": false,
  "typescript.implementationsCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "typescript.suggestionActions.enabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/", "Gopkg.toml"],
      "filetypes": ["go"]
    }
  }
}
