# basic status line
set -g status "on"
set -g status-style "bg=colour236 align=centre"
set -g status-justify "centre"

set -g status-left-length "100"
set -g status-left "#[fg=colour59,bg=colour74] #S #[fg=colour74,bg=colour59,nobold,nounderscore,noitalics]#[fg=colour153,bg=colour59] #F #[fg=colour59,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour74,bg=colour236] #W #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
set -g status-right-length "100"
set -g status-right "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour74,bg=colour236] %a #[fg=colour59,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour153,bg=colour59] %b %d | %R #[fg=colour74,bg=colour59,nobold,nounderscore,noitalics]#[fg=colour59,bg=colour74] #H "

# borders
set -g pane-border-style fg="colour59"
set -g pane-active-border-style fg="colour126"

# messages/commands
set -g message-command-style "bg=colour59 fg=colour153"
set -g message-style "bg=colour59 fg=colour153"

# window status
setw -g window-status-style "bg=colour236 fg=colour74 align=centre"
setw -g window-status-activity-style "bg=colour236 fg=colour255 align=centre"
setw -g window-status-current-style "bg=colour236 fg=colour255 align=centre"

setw -g window-status-separator ""
setw -g window-status-format "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[default] #I | #W #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour236,bg=colour59,nobold,nounderscore,noitalics]#[fg=colour153,bg=colour59] #I | #W #[fg=colour59,bg=colour236,nobold,nounderscore,noitalics]"
