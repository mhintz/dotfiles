# basic status line
set -g status "on"
set -g status-style "bg=colour237 align=centre"
set -g status-justify "centre"

set -g status-left-length "100"
set -g status-left "#[fg=brightblue,bg=black] #P "
set -g status-right-length "100"
set -g status-right "#[fg=brightblue,bg=black] %a %b %d | %R #[fg=black,bg=blue] #H "

# borders
set -g pane-border-style fg="black"
set -g pane-active-border-style fg="green"

# messages/commands
set -g message-command-style "bg=black fg=brightblue"
set -g message-style "bg=black fg=brightblue"

# window status
setw -g window-status-style "bg=colour237 fg=brightblue align=centre"
setw -g window-status-current-style "bg=black fg=brightblue align=centre"
setw -g window-status-activity-style "bg=red fg=black align=centre"

setw -g window-status-separator ""
setw -g window-status-format " #I | #W "
setw -g window-status-current-format " #I | #W "
